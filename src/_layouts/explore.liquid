<div class="px-6 pt-24 pb-6 mb-12 bg-background-alt">
  <div class="flex flex-row w-full justify-between items-center mb-12 md:gap-12 flex-wrap md:flex-nowrap">
    <div class="md:basis-1/4">
      <h1 class="text-5xl">{{ title }}</h1>
    </div>
    <div class="md:basis-3/4">
      <h2 class="text-4xl mb-6">Search</h2>
      <form method="GET" action="/explore" class="w-full">
        <div class="flex w-full">
          <select name="field" class="border border-text rounded-l px-4 py-2 focus:outline-none focus:ring-2 focus:ring-accent">
            <option value="all">All Fields</option>
            {% for i in (1..8) %}
            <option value="title">Field #{{i}}</option>
            {% endfor %}
          </select>
          <input type="text" name="q" placeholder="Search..." class="flex-grow border-t border-b border-text px-4 py-2 focus:outline-none focus:ring-2 focus:ring-accent">
          <button type="submit" class="cursor-pointer bg-text text-background px-4 py-2 rounded-r  focus:outline-none focus:ring-2 focus:ring-accent">Search</button>
        </div>
      </form>
    </div>
  </div>
</div>
