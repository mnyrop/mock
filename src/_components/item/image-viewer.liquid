<div id="map" class="w-full z-0 h-full sticky top-0 bg-background-alt shadow-inner rounded-md"></div>

<script src="/assets/vendor/osd/openseadragon.min.js"></script>
<script type="text/javascript">
  document.addEventListener("DOMContentLoaded", function () {
    window.viewer = OpenSeadragon({
      id: "map",
      sequenceMode: true,
      prefixUrl: "{{ '/assets/vendor/osd/images/'| htmlBaseUrl }}",
      tileSources: {
          type: 'image',
          url:  "{{ '/files' | htmlBaseUrl }}/{{ item.pid }}.jpg"
      },
      placeholderFillStyle: "#FFFFFF",
      showReferenceStrip: true,
      showHomeControl: false
    });
    // viewer.innerTracker.scrollHandler = false;
  });
</script>